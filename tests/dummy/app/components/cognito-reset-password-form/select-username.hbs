<form {{action "onSubmit" on="submit" preventDefault=true}}>

  {{yield
    (hash
      skipTriggerResetPasswordEmail=(action @skipTriggerResetPasswordEmail this.currentUsername)

      UsernameInput=(component
        "cognito-text-input"
        value=this.currentUsername
        onChange=(action "updateUsername")
      )

      ErrorDisplay=(if
        @error
        (component
          "cognito-error"
          error=@error
        )
      )
    )
  }}

</form>