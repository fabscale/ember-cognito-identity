<form {{on 'submit' (perform this.submitFormTask)}}>
  {{yield
    (hash
      mustEnterNewPassword=this.mustEnterNewPassword
      mustEnterMfaCode=this.mustEnterMfaCode
      error=(readonly this.error)
      username=(readonly this.username)
      password=(readonly this.password)
      newPassword=(readonly this.newPassword)
      isPending=this.submitFormTask.isRunning
      updateUsername=this.updateUserName
      updatePassword=this.updatePassword
      updateNewPassword=this.updateNewPassword
      UsernameInput=(component
        'cognito-text-input' value=this.username onChange=this.updateUsername
      )
      PasswordInput=(component
        'cognito-password-input'
        value=this.password
        onChange=this.updatePassword
      )
      NewPasswordInput=(component
        'cognito-password-input'
        value=this.newPassword
        onChange=this.updateNewPassword
      )
      MfaCodeInput=(component
        'cognito-text-input' value=this.mfaCode onChange=this.updateMfaCode
      )
      ErrorDisplay=(if this.error (component 'cognito-error' error=this.error))
    )
  }}
</form>