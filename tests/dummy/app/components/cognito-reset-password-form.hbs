{{yield
  (hash
    verificationCode=(readonly this.selectedVerificationCode)
    username=(readonly this.selectedUsername)
    password=(readonly this.password)
    error=this.error
    isPending=this.isPending
    resetPassword=(perform this.resetPasswordTask)
    triggerResetPasswordEmail=(perform this.triggerResetPasswordEmailTask)
    updateUsername=this.updateUsername
    updatePassword=this.updatePassword
    updateVerificationCode=this.updateVerificationCode
    UpdatePasswordForm=(if
      this.showPasswordForm
      (component
        'cognito-reset-password-form/update-password'
        resetPassword=(perform this.resetPasswordTask)
        resendVerificationCode=this.resendVerificationCode
        error=this.error
        verificationCode=(readonly this.selectedVerificationCode)
        username=(readonly this.selectedUsername)
      )
    )
    SelectUsernameForm=(unless
      this.showPasswordForm
      (component
        'cognito-reset-password-form/select-username'
        triggerResetPasswordEmail=(perform this.triggerResetPasswordEmailTask)
        skipTriggerResetPasswordEmail=this.skipTriggerResetPasswordEmail
        error=this.error
        verificationCode=(readonly this.selectedVerificationCode)
        username=(readonly this.selectedUsername)
      )
    )
  )
}}