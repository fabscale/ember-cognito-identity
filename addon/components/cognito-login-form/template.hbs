<form {{action "submitForm" on="submit" preventDefault=true}}>

  {{yield
    (hash
      mustEnterNewPassword=this.mustEnterNewPassword
      error=this.error

      UsernameInput=(component
        "cognito-text-input"
        value=this.username
        onChange=(action "updateUsername")
      )

      PasswordInput=(component
        "cognito-password-input"
        value=this.password
        onChange=(action "updatePassword")
      )

      NewPasswordInput=(component
        "cognito-password-input"
        value=this.newPassword
        onChange=(action "updateNewPassword")
      )

      ErrorDisplay=(if
        this.error
        (component
          "cognito-error"
          error=this.error
        )
      )

    )
  }}

</form>