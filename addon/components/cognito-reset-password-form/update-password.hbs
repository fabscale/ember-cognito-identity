<form {{action "onSubmit" on="submit" preventDefault=true}}>

  {{yield
    (hash
      username=@username
      resendVerificationCode=@resendVerificationCode

      VerificationCodeInput=(component
        "cognito-text-input"
        value=this.currentVerificationCode
        onChange=(action "updateVerificationCode")
      )

      PasswordInput=(component
        "cognito-password-input"
        value=this.password
        onChange=(action "updatePassword")
      )

      ErrorDisplay=(if
        this.error
        (component
          "cognito-error"
          error=this.error
        )
      )
    )
  }}

</form>