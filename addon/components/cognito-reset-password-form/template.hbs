{{yield
  (hash
    verificationCode=(readonly this.selectedVerificationCode)
    username=(readonly this.selectedUsername)
    password=(readonly this.password)
    error=this.error

    resetPassword=(action "resetPassword")
    triggerResetPasswordEmail=(action "triggerResetPasswordEmail")
    updateUsername=(action "updateUsername")
    updatePassword=(action "updatePassword")
    updateVerificationCode=(action "updateVerificationCode")

    UpdatePasswordForm=(if
      this.showPasswordForm
      (component
        "cognito-reset-password-form/update-password"
        resetPassword=(action "resetPassword")
        resendVerificationCode=(action "resendVerificationCode")
        error=this.error

        verificationCode=(readonly this.selectedVerificationCode)
        username=(readonly this.selectedUsername)
      )
    )

    SelectUsernameForm=(unless
      this.showPasswordForm
      (component
        "cognito-reset-password-form/select-username"
        triggerResetPasswordEmail=(action "triggerResetPasswordEmail")
        skipTriggerResetPasswordEmail=(action "skipTriggerResetPasswordEmail")
        error=this.error

        verificationCode=(readonly this.selectedVerificationCode)
        username=(readonly this.selectedUsername)
      )
    )

  )
}}